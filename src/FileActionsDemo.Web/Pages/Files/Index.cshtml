@page
@model FileActionsDemo.Web.Pages.Files.Index

@section scripts{
    <abp-script src="/Pages/Files/index.js"></abp-script>
}

<abp-card>
    <abp-card-header>
        <h3>File Upload and Download</h3>
    </abp-card-header>
    <abp-card-body>
        <abp-row>
            <abp-column>
                <h3>Upload File</h3>
                <hr />
                <form method="post" enctype="multipart/form-data">
                   <abp-input asp-for="UploadFileDto.Name"></abp-input>
                   
                   <abp-input asp-for="UploadFileDto.File"></abp-input>

                   <input type="submit" class="btn btn-info" />
                </form>

                <form id="UploadFile" action="/upload" enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;" 
                      method="post">
                    <dl>
                        <dt>
                            <label for="FileUpload_FormFile">File</label>
                        </dt>
                        <dd>
                            <input id="formFile" type="file" 
                                name="formFile" />
                        </dd>
                    </dl>

                    <input class="btn" type="submit" value="Upload" />

                    <div style="margin-top:15px">
                        <output name="result"></output>
                    </div>
                </form>

            </abp-column>
            <abp-column>
                <h3>Download File</h3>
                <hr />
                <form id="DownloadFile">
                    <div class="form-group">
                        <label for="fileName">Filename</label><span> * </span>
                        <input type="text" id="fileName" name="fileName" class="form-control" />

                    </div>
                    <input type="submit" class="btn btn-info" />
                </form>
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>